<%-include('../header.ejs') %>
    <%-include('../sidebar.ejs') %>


        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">Dashboard</h1>
                        </div><!-- /.col -->
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active">Dashboard</li>
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->

            <!-- Main content -->
            <div class="content">
                <div class="container-fluid">
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>s.no</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>course</th>
                                        <th>status</th>
                                        <th>comment</th>
                                        <th></th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% d.forEach((item,index)=>{ %>
                                        <tr>
                                            <td>
                                                <%= index+1 %>
                                            </td>
                                            <td>
                                                <%= item.name %>

                                            </td>
                                            <td>
                                                <%= item.email %>
                                            </td>
                                            <td>
                                                <%= item.course %>
                                            </td>
                                            <td>
                                                <%= item.status %>
                                            </td>
                                            <td>
                                                <%= item.comment %>
                                            </td>
                                           
                                           
                                          <td>
                                            <form action="/admin/statusUpdate/<%= item._id %>" method="post">
                                                <input type="hidden" name="name" value="<%= item.name %>">
                                                <input type="hidden" name="email" value="<%= item.email %>">
                                                <textarea name="comment" class="form-control"></textarea>
                                                <button name="status" value="Approved"
                                                    class="btn btn-success">Approved</button>
                                                <button name="status" value="Rejected"
                                                    class="btn btn-danger">Rejected</button>
                                            </form>
                                          </td>
                            
                                            <td>
                                                <a href="/admin/courseView/<%= item._id %>" class="btn btn-info">view</a>
                                               
                                            </td>

                                        </tr>
                                        <% }) %>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>s.no</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>course</th>
                                        <th>status</th>
                                        <th>comment</th>
                                        <th></th>
                                        <th>Action</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <div class="modal fade" id="modal-default">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Default Modal</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div>
                        <form action="/admin/userInsert" method="post"  enctype="multipart/form-data">
                            <div class="from-group">
                                <label for="">NAME:</label>
                                <input type="text" name="n" class="form-control" placeholder="your name">
                            </div>
                            <div class="from-group">
                                <label for="">EMAIL:</label>
                                <input type="text" name="e" class="form-control" placeholder="your email">
                            </div>
                            <div class="from-group">
                                <label for="">PASSWORD:</label>
                                <input type="text" name="p" class="form-control" placeholder="your password">
                            </div>
                            <div class="row mb-4">
                                <div class="col-lg-3 text-center bg-secondary rounded text-light fw-light my-auto p-2">profile image</div>
                                <div class="col-lg-9">
                                    <input name="image"  class="form-control" type="file" required>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-info">Submit</button>
                        </form>
                    </div>

                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->

        <%-include('../footer.ejs') %>